<h1><%- title %></h1>
<%- messages() %>

<div class="update-account-container">
    <!-- Display error messages -->
    <% if (errorMessage) { %>
        <div class="error"><%= errorMessage %></div>
    <% } %>

    <!-- Display success messages -->
    <% if (successMessage) { %>
        <div class="success"><%= successMessage %></div>
    <% } %>
</div>
<div class="account-update-section">
    <h2>Account Information</h2>
    <form action="/account/update" method="POST">
        <!-- Hidden field to pass the account ID -->
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>" />

        <!-- Populate the form fields with the existing account data -->
        <label for="account_firstname">First Name:</label>
        <input type="text" name="account_firstname" placeholder="First Name" value="<%= accountData.account_firstname %>" required />

        <label for="account_lastname">Last Name:</label>
        <input type="text" name="account_lastname" placeholder="Last Name" value="<%= accountData.account_lastname %>" required />

        <label for="account_email">Email:</label>
        <input type="email" name="account_email" placeholder="Email" value="<%= accountData.account_email %>" required />

        <button type="submit">Update Account</button>
    </form>
</div>

<div class="password-update-section">
    <h2>Change Password</h2>
    <form action="/account/change-password" method="POST">
        <input type="password" name="current_password" placeholder="Current Password" required />
        <input type="password" name="new_password" placeholder="New Password" required />
        <button type="submit">Change Password</button>
    </form>
</div>