<div class="input-box" id="loginForm" action="/account/" method="post">
    <p>You're logged in!</p>
    <!-- Greeting Section -->
    <h2>Welcome <%= firstName %></h2>
    <h3>Account Type: <%= accountType %></h3>

    <p>
        <a href="/account/update/<%= accountId %>">Update Account Information</a>
    </p>

    <!-- Inventory Management Section (Visible to Admin/Employee Only) -->
    <% if (accountType === "Admin" || accountType === "Employee") { %>
        <h3>Inventory Management</h3>
        <p>
            <a href="/inv">Access Inventory Management</a>
        </p>
    <% } %>
</div>