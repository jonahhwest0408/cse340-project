<h1>Add New Vehicle</h1>

<form id="add-inventory-form" action="/inv/add-inventory" method="post">
  <label for="classificationList">Classification:</label>
  <%= classificationList %> <!-- The classification dropdown will be dynamically inserted here -->
  
  <label for="make">Make:</label>
  <input type="text" id="make" name="make" value="<%= make ? make : '' %>" required>
  
  <label for="model">Model:</label>
  <input type="text" id="model" name="model" value="<%= model ? model : '' %>" required>

  <label for="year">Year:</label>
  <input type="number" id="year" name="year" min="1900" max="2100" value="<%= year ? year : '' %>" required>

  <label for="price">Price:</label>
  <input type="number" id="price" name="price" step="0.01" value="<%= price ? price : '' %>" required>

  <label for="mileage">Mileage:</label>
  <input type="number" id="mileage" name="mileage" value="<%= mileage ? mileage : '' %>" required>

  <label for="color">Color:</label>
  <input type="text" id="color" name="color" value="<%= color ? color : '' %>" required>

  <label for="image">Image Path:</label>
  <input type="text" id="image" name="image" value="<%= image ? image : '/images/no-image.jpg' %>">

  <label for="thumbnail">Thumbnail Path:</label>
  <input type="text" id="thumbnail" name="thumbnail" value="<%= thumbnail ? thumbnail : '/images/no-image-thumb.jpg' %>">

  <button type="submit">Add Vehicle</button>
</form>

<% if (messages && messages.length > 0) { %>
  <div class="flash-messages">
    <% messages.forEach(function(msg) { %>
      <p><%= msg %></p>
    <% }) %>
  </div>
<% } %>
